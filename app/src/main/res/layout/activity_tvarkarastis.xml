<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="lt.vkk.tvarkarastis.TvarkarastisActivity">

    <io.karim.MaterialTabs
        android:id="@+id/material_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/actionbar_background"
        app:mtSameWeightTabs="true"
        app:mtPaddingMiddle="false"
        app:mtIndicatorColor="@color/indicator_color"
        android:textColor="@color/tabs_color_selected_not"
        app:mtTextColorSelected="@color/tabs_color_selected" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
